{
    "compilerOptions": {
        "rootDir": "./src/ts/",
        "outDir": "./dist/js/",
        "allowJs": true,
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "node",
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "esModuleInterop": true
    },
    "include": ["./src/ts/**/*"]
}
